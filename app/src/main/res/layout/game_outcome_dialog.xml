<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp">

    <TextView
        android:id="@+id/textViewGameOutcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:text="@string/button_play_again"
        android:textColor="@color/black2"
        android:textStyle="bold"
        app:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="@+id/textViewGameOutcome"
        app:layout_constraintStart_toStartOf="@+id/textViewGameOutcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewGameOutcome"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/buttonEndGameSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:text="@string/button_end_game_session"
        android:textColor="@color/black2"
        android:textStyle="bold"
        app:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/buttonPlayAgain"
        app:layout_constraintStart_toStartOf="@+id/buttonPlayAgain"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayAgain" />

</androidx.constraintlayout.widget.ConstraintLayout>